{{#extend "stylesheets"}}
<link rel="shortcut icon" type="image/png" href="/favicons/favicon-user.png"/>
{{/extend}}

<main>
	<div id="profile-content">
		<div id="profile-info-container">
			<div id="profile-pic-container">
				<img src="/imgs/profile-img-temp.png" alt="Profile Picture" id="profile-pic">
			</div>
			<div id="user-info">
				<h5 id="user-name">{{user.name}}</h5>
				<p id="user-bio">Vice fanny pack chicharrones 90's put a bird on it. Intelligentsia irony quinoa bitters pok pok, hexagon hashtag succulents. Vice fanny pack chicharrones 90's put a bird on it.</p>
			</div>
		</div>
		<div id="profile-tabs-container">
			<ul>
				<a href="#"><li id="my-lists-tab" class="profile-tabs selected-tab">My Lists</li></a>
				<a href="#"><li id="favs-tab" class="profile-tabs">Favorites</li></a>
				<a href="#"><li id="edit-profile-tab" class="profile-tabs">Edit Profile</li></a>
			</ul>
		</div>
		<section id="profile-items">
			<div id="my-lists-container">
				<ul id="my-lists-cards">
					{{#each lists}}
					<li>
						<a href="{{this.url}}">
							<div class="card">
								<img src="imgs/temp.png">
								<div class="overlay">
									<div class="hover-text">
										<h5>{{this.title}}</h5>
									</div>
								</div>
							</div>
						</a>
					</li>
					{{/each}}
				</ul>
			</div>
			<div id="favs-container">
				<ul id="favorites-cards">
				</ul>
			</div>
			<div id="edit-profile-container">
				<form id="edit-bio-form" action="index.html" method="post">
					<h3>Update Bio</h3>
					<div class="form-group">
						<label for="edit-profile-name">Name</label>
						<div class="input-helpers">
							<input type="text" id="profile-name" name="edit-profile-name" value>
							<span class="field-error"></span>
						</div>
						<label for="edit-user-bio">Bio</label>
						<textarea name="edit-user-bio" id="edit-user-bio" value=""></textarea>
					</div>
					<input type="button" id="submit-bio" class="button-primary" value="Update Profile">
				</form>
				<hr class="profile-form-separator">
				<form id="edit-email-form" action="index.html" method="post">
					<h3>Change Email</h3>
					<div class="form-group">
						<label for="edit-profile-name">Name</label>
						<div class="input-helpers">
							<input type="text" id="profile-name" name="edit-profile-name" value>
							<span class="field-error"></span>
						</div>
					</div>
					<div class="form-group">
						<label for="edit-profile-email">Email</label>
						<div class="input-helpers">
							<input type="email" id="profile-email" name="edit-profile-email" value>
							<span class="field-error"></span>
						</div>
					</div>
					<input type="submit" id="submit-profile" class="submit button-primary" value="Change Email">
				</form>
				<hr class="profile-form-separator">
				<form id="edit-password-form" action="index.html" method="post">
					<h3>Change Password</h3>
					<div class="form-group">
						<label for="edit-profile-password">New Password</label>
						<div class="input-helpers">
							<input type="password" id="profile-password" name="edit-profile-password" value>
							<span class="field-error"></span>
						</div>
					</div>
					<div class="form-group">
						<label for="edit-profile-password2">Confirm Password</label>
						<div class="input-helpers">
							<input type="password" id="profile-confirm" name="edit-profile-password2" value>
							<span class="field-error"></span>
						</div>
					</div>
					<input type="submit" id="submit-profile" class="submit button-primary" value="Change Password">
				</form>

			</div>
		</section>
	</main>

	{{#extend "scripts"}}
	{{/extend}}
