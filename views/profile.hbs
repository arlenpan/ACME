{{#extend "stylesheets"}}
<link rel="shortcut icon" type="image/png" href="/favicons/favicon-user.png"/>
{{/extend}}

<main>
	<div id="profile-content">
		<div id="profile-info-container">
			<div id="profile-pic-container">
				<img src="/imgs/profile-img-temp.png" alt="Profile Picture" id="profile-pic">
			</div>
			<div id="user-info">
				<h5 id="user-name">{{user.name}}</h5>
				<p id="user-bio">Vice fanny pack chicharrones 90's put a bird on it. Intelligentsia irony quinoa bitters pok pok, hexagon hashtag succulents. Vice fanny pack chicharrones 90's put a bird on it.</p>
			</div>
		</div>
		<div id="profile-tabs-container">
			<ul>
				<li id="my-lists-tab" class="profile-tabs selected-tab"><a href="#">My Lists</a></li>
				<li id="favs-tab" class="profile-tabs"><a href="#">Favorites</a></li>
				<li id="edit-profile-tab" class="profile-tabs"><a href="#">Edit Profile</a></li>
			</ul>
		</div>
		<section id="profile-items">
			<div id="my-lists-container">
				<ul id="my-lists-cards">
					{{#each lists}}
					<li>
						<a href="{{this.url}}">
							<div class="card">
								<img src="imgs/temp.png">
								<div class="overlay">
									<div class="hover-text">
										<h5>{{this.title}}</h5>
									</div>
								</div>
							</a>
						</li>
						{{/each}}
					</ul>
				</div>
				<div id="favs-container">
				</div>
				<div id="edit-profile-container">
					<input type="text" id="edit-user-name" placeholder="Name" value="">
					<textarea name="edit-user-bio" id="edit-user-bio" placeholder="Bio" value="" cols="50" rows="50"></textarea>
					<input class="button-primary" type="submit" id="submit-profile">
				</div>
			</section>
		</div>
	</main>

	{{#extend "scripts"}}
	{{/extend}}
