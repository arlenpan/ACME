{{#extend "stylesheets"}}
<link rel="shortcut icon" type="image/png" href="/favicons/favicon-explore.png"/>
{{/extend}}
<main id="explore-content">
  <div id="search-container">
    <h4> What's around me? </h4>
    <input type="text" id="search" class="search" placeholder="Enter keywords or tags in the format #tag to search" value="">
    <div id="sort-btns">
      <button class="button-primary sort" type="button" data-sort="trip">sort by name</button>
      <button class="button-primary sort" type="button" data-sort="favcount">sort by popularity</button>
      <button class="button-primary sort" type="button" data-sort="date-made">sort by date</button>
    </div>
  </div>
  <ul class="paginationTop"></ul>
  <ul id="card-container" class="list">
  {{#each lists}}
    <li>
      <a href="/list/{{this.url}}">
        <div class="card">
          <img src="/imgs/temp.png">
          <div class="overlay">
            <div class="hover-text">
              <h5 class="trip">{{this.title}}</h5>
              <p class="description">{{this.description}}</p>
              <span class="hidden-details tags">{{#each this.tags}}#{{this}} {{/each}}</span>
              <span class="hidden-details locations">{{#each this.locations}}{{this.name}} {{/each}}</span>
              <span class="hidden-details address">{{#each this.locations}}{{this.address}} {{/each}}</span>
              <span class="hidden-details author">{{this.author}}</span>
              <span class="hidden-details favcount">{{this.favoriteCount}}</span>
              <span class="hidden-details date-made">{{this.dateCreated}}</span>
              <span class="hidden-details date-update">{{this.dateUpdated}}</span>
              <span class="hidden-details url">{{this.url}}</span>
              <span class="hidden-details distance">{{this.dis}}</span>
            </div>
          </div>
        </div>
      </a>
    </li>
  {{/each}}
  </ul>
  <ul class="paginationBottom"></ul>
</main>

{{#extend "scripts"}}
{{/extend}}
